<Window x:Class="YAEM.DesktopClient.MessagingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MessagingWindow" Height="364" Width="362" Closing="WindowClosing">
    <Grid>
        <Grid Name="grid1" Height="88" VerticalAlignment="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="105" />
                <ColumnDefinition Width="235*" />
            </Grid.ColumnDefinitions>
            <ListBox Grid.Column="1" Name="listBox1" ItemsSource="{Binding JoinedUsers}" />
            <TextBlock Height="23" HorizontalAlignment="Left" Margin="6,6,0,0" Name="textBlock1" Text="Joined Users" VerticalAlignment="Top" />
        </Grid>
        <Grid Margin="0,94,0,0" Name="grid2">
            <Grid.RowDefinitions>
                <RowDefinition Height="196" />
                <RowDefinition Height="35*" />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <TextBox Height="23" Name="MessageTextBox" Width="264" />
                <Button Content="Send" Height="23" Name="SendButton" Width="75" Click="SendButtonClick" />
            </StackPanel>
            <TextBox Name="MessageHistoryTextBox" />
        </Grid>
    </Grid>
</Window>
